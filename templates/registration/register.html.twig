{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div class="m-3">
        <a href="{{ path('user_index') }}">back to list</a>
    </div>

    <div class="container d-flex justify-content-around align-items-center mt-5 bg-light m-5 p-5">

    <h1 class="m-5 p-5">Register</h1>

    {{ form_start(registrationForm) }}

        {{ form_row(registrationForm.email, {
            label: 'Email', 'attr':{'placeholder':"Enter your mail" }}) }}
        {{ form_row(registrationForm.firstname, {
            label: 'Firstname', 'attr':{'placeholder':"Enter your firsname" }
        }) }}
        {{ form_row(registrationForm.lastname, {
            label: 'Lastname', 'attr':{'placeholder':"Enter your lastname" }
        }) }}
         {{ form_row(registrationForm.gender, {
            label: 'Gender', 'attr':{'placeholder':"Enter your gender" }
        }) }}
         {{ form_row(registrationForm.roles, {
            label: 'Roles', 'attr':{'placeholder':"Enter your roles" }
        }) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password', 'attr':{'placeholder':"Enter your password" }
        }) }}
         {{ form_row(registrationForm.agreeTerms, {
            label: 'Accept terms'
        }) }}

        <button type="submit" class="btn btn-dark">Save</button>
    </div>

    {{ form_end(registrationForm) }}

{% endblock %}
