{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>Register</h1>

    {{ form_start(registrationForm) }}

        {{ form_row(registrationForm.email, {'attr':{'placeholder':"Enter your mail" }}) }}
        {{ form_row(registrationForm.firstname, {
            label: 'Firstname', 'attr':{'placeholder':"Enter your firsname" }
        }) }}
        {{ form_row(registrationForm.lastname, {
            label: 'Lastname', 'attr':{'placeholder':"Enter your lastname" }
        }) }}
         {{ form_row(registrationForm.gender, {
            label: 'Gender', 'attr':{'placeholder':"Enter your gender" }
        }) }}
         {{ form_row(registrationForm.roles, {
            label: 'Roles', 'attr':{'placeholder':"Enter your roles" }
        }) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password', 'attr':{'placeholder':"Enter your password" }
        }) }}
         {{ form_row(registrationForm.agreeTerms, {
            label: 'Accept terms'
        }) }}

        <button type="submit" class="btn">Register</button>

    {{ form_end(registrationForm) }}
{% endblock %}
